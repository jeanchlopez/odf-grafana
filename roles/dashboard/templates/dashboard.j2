apiVersion: grafana.integreatly.org/v1beta1
kind: GrafanaDashboard
metadata:
  name: {{ dashboard_name }}
  labels:
    app: grafana
  namespace: {{ grafana_namespace }}
spec:
  instanceSelector:
    matchLabels:
      dashboards: "grafana-dashboard"
  folder: PerfScale
  json: >
{% for line in dashboard_content[1:-1].split('\n') %}
    {{ line }}
{% endfor %}
